
.indexContainer{
  /* flex默认是水平排列 */
  display: flex; 
  flex-direction: column;
  align-items: center;
  background: #e60026;
  height: 100%;
}
.avatarUrl{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}

button{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
  font-size: 24rpx;
  line-height: 200rpx;
  text-align: center;
  background-color:white;
  color: #333;
}

.userName{
  font-size: 32rpx;
  margin: 100rpx 0;
}

.goStudy{
  width: 300rpx;
  height: 80rpx;
  /* 垂直居中 */
  line-height: 80rpx;
  /* 水平居中 */
  text-align: center;
  font-size: 29rpx;
  border: 1rpx solid #333;
  border-radius: 10rpx;
}